<Window x:Class="TestGit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestGit"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1200" Background="#FFFFBABA" BorderBrush="#FFFF9898" OpacityMask="#FFFF9494">
    <Grid Margin="0,0,-8,-10" Background="#FFCDCDCD">

        <DockPanel Height="100" LastChildFill="False" Margin="0" VerticalAlignment="Top" Background="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
        <DockPanel HorizontalAlignment="Left" LastChildFill="False" Margin="0,100,0,0" Width="100" Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}"/>
        <DockPanel LastChildFill="False" Margin="100,100,0,0" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}" Width="1102">
            <Canvas Background="#FFFB8A8A" Margin="0,300,0,31" Height="268" Width="529"/>
        </DockPanel>
    </Grid>
</Window>
